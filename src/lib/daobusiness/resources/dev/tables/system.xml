<?xml version="1.0" encoding="UTF-8"?>
<table xmlns="http://www.alephsistemas.es" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.alephsistemas.es alepherp-metadata.xsd">
       
    <name>alepherp_system</name>
    <alias>Tabla de sistema</alias>

    <moduleToolBarEntryPath>Sistema</moduleToolBarEntryPath>
    <menuEntryPath>Configuración</menuEntryPath>

    <field>
        <name>id</name>
        <alias>Cod. Tabla</alias>
        <null>false</null>
        <pk>true</pk>
        <type>serial</type>
        <visiblegrid>false</visiblegrid>
    </field>
    <field>
        <name>nombre</name>
        <alias>Nombre</alias>
        <null>false</null>
        <pk>false</pk>
        <type>string</type>
        <length>250</length>
    </field>
    <field>
        <name>version</name>
        <alias>Version</alias>
        <null>false</null>
        <pk>false</pk>
        <type>int</type>
    </field>
    <field>
        <name>contenido</name>
        <alias>Contenido</alias>
        <null>true</null>
        <pk>false</pk>
        <type>stringlist</type>
        <visiblegrid>false</visiblegrid>
        <includeOnGeneratedSearchDlg>true</includeOnGeneratedSearchDlg>
    </field>
    <field>
        <name>type</name>
        <alias>Tipo de tabla</alias>
        <null>false</null>
        <pk>false</pk>
        <type>string</type>
        <length>10</length>
        <optionList>table,tableTemp,ui,qs,rcc,reportDef,report,help,binary</optionList>
    </field>
    <field>
        <name>device</name>
        <alias>Tipo de dispositivo</alias>
        <null>false</null>
        <pk>false</pk>
        <type>string</type>
        <length>250</length>
        <optionList>*,Desktop,Android.240.320,Android.480.800,Android.1024.720</optionList>
    </field>        
    <field>
        <name>debug</name>
        <alias>Debug</alias>
        <null>false</null>
        <pk>false</pk>
        <type>bool</type>
        <default>false</default>
    </field>
    <field>
        <name>on_init_debug</name>
        <alias>Debug en inicio</alias>
        <null>false</null>
        <pk>false</pk>
        <type>bool</type>
        <default>false</default>
    </field>
    <field>
        <name>module</name>
        <alias>Módulo</alias>
        <null>false</null>
        <pk>false</pk>
        <type>string</type>
        <length>250</length>
        <relation>
            <table>alepherp_modules</table>
            <field>id</field>
            <card>M1</card>
        </relation>	
    </field>
    <field>
        <name>idorigin</name>
        <alias>Elemento padre</alias>
        <null>true</null>
        <pk>false</pk>
        <type>string</type>
        <length>250</length>
        <visiblegrid>false</visiblegrid>
        <relation>
            <table>alepherp_system</table>
            <field>id</field>
            <card>M1</card>
        </relation>
    </field>
</table>
